{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+)\\s+-\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[watch\\] build started",
                    "endsPattern": "\\[watch\\] build finished"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "npm: watch"
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [],
            "label": "npm: build"
        }
    ]
}
